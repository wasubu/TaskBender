<Application x:Class="TaskBender.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:TaskBender"
             xmlns:tb="http://www.hardcodet.net/taskbar">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- <ResourceDictionary Source="pack://application:,,,/Wpf.Ui;component/Resources/Theme/Default.xaml" /> -->
                <!-- <ResourceDictionary Source="pack://application:,,,/Wpf.Ui;component/Resources/Theme/Dark.xaml" /> -->
            </ResourceDictionary.MergedDictionaries>
            
            <ContextMenu x:Key="TrayMenu">
                <MenuItem Header="Show TaskBender" Click="ShowApp_Click" />
                <MenuItem Header="Settings" Click="Settings_Click" />
                <Separator />
                <MenuItem Header="Exit" Click="Exit_Click" />
            </ContextMenu>
            
            <tb:TaskbarIcon x:Key="TrayIcon"
                            ToolTipText="TaskBender"
                            ContextMenu="{StaticResource TrayMenu}"
                            TrayMouseDoubleClick="TrayIcon_DoubleClick" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
